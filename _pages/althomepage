    <script>
        // Profile Picture Swap
        function changeProfilePic(newPicUrl) {
            document.getElementById('profilePic').style.backgroundImage = `url(${newPicUrl})`;
        }

        // Social Media Icons Slide
        document.querySelectorAll('.social-icon').forEach(icon => {
            icon.addEventListener('click', function() {
                const usernameDiv = this.querySelector('.username');
                usernameDiv.style.display = 'block';
                this.style.transform = 'translateX(50px)';
            });
        });
    </script>

